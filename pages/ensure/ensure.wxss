/* pages/ensure/ensure.wxss */
page {
  background-color: #f5f5f5;
}

.time {
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border-bottom: 1rpx #a0a0a0 solid;
  background-color: #fef3d9;
  color: #f90;
}
.main-msg {
  margin-top: 20rpx;
  border-top: #ddd 1rpx solid;
  border-bottom: #ddd 1rpx solid;
  padding: 30rpx 0 0 30rpx;
  background-color: white;
}
.main-top {
  border-bottom: 1rpx solid #e1e1e1;
}
.main-top>view:nth-child(1) {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.main-top>view text {
  font-size: 28rpx;
  margin-right: 10rpx;
}
.main-top>view:nth-child(2) text {
  color: #f74346;
}
.main-top>view:nth-child(4) {
  margin-bottom: 30rpx;
}
.main-btm {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 45rpx 30rpx 0;
}
.main-btm>text {
  font-size: 30rpx;
  color: #a3a3a3;
}
.main-btm>view {
  font-size: 26rpx;
  color: #9b9b9b;
}
.main-btm>view text:nth-child(2) {
  font-size: 24rpx;
  color: #a75c35;
  margin-left: 25rpx;
}

.good {
  margin-top: 20rpx;
  border-top: #ddd 1rpx solid;
  border-bottom: #ddd 1rpx solid;
  padding: 0 25rpx 0 30rpx;
  background-color: white;
}
.good-box {
  display: flex;
  padding: 25rpx 0;
  font-size: 30rpx;
  align-items: center;
  justify-content: space-between;
}
.good-box>text {
  color: #666;
}
.good-box:not(:last-child) {
  border-bottom: #d9d9d9 1rpx solid;
}
.good-box-one>text:nth-child(1) {
  color: #a1a1a1;
  font-size: 26rpx;
  margin-right: 10rpx;
}
.good-box-one>text:nth-child(2) {
  color: #ae523d;
  margin-right: 10rpx;
}
.good-box-one>text:last-child {
  color: #dbdbdb;
  font-size: 22rpx;
  font-family: '宋体';
}
.good-box-two>text:nth-child(1) {
  margin-right: 10rpx;
}
.good-box-two>text:last-child {
  color: #dbdbdb;
  font-size: 22rpx;
  font-family: '宋体';
}



.notice {
  margin-top: 20rpx;
  border-top: #ddd 1rpx solid;
  border-bottom: #ddd 1rpx solid;
  padding: 0 25rpx 0 30rpx;
  background-color: white;
}
.notice-box {
  padding: 25rpx 0;
  font-size: 30rpx;
}
.notice-box-head {
  color: #666;
}
.notice-box>text {
  display: block;
}
.notice-box:not(:last-child) {
  border-bottom: #d9d9d9 1rpx solid;
}
.notice-box-mid {
  color: #b2b2b2;
  font-size: 24rpx;
}

.phone {
  margin-top: 20rpx;
  border-top: #ddd 1rpx solid;
  border-bottom: #ddd 1rpx solid;
  padding: 0 25rpx 0 30rpx;
  background-color: white;
}
.phone-box {
  padding: 25rpx 0;
  font-size: 30rpx;
}
.phone-box-head {
  color: #0b0b0b;
  font-size: 30rpx;
  font-weight: bold;
}
.phone-box-head:first-child {
  margin-right: 50rpx;
}
.phone-box:not(:last-child) {
  border-bottom: #d9d9d9 1rpx solid;
}
.phone-box-mid {
  font-size: 28rpx;
  color: #ccc;
}




.empty {
  height: 230rpx; 
}
.pay-box {
  position: fixed;
  bottom: 0;
  width: calc(100% - 50rpx);
  height: 199rpx;
  border-top: 1rpx solid #DDD;
  padding: 25rpx 30rpx 0;
  background-color: white;
}
.pay-tip {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.pay-tip-lft>text {
  display: block;
  font-size: 24rpx;
  color: #8f8f8f;
}
.pay-tip-rgt>text:nth-child(1) {
  font-size: 28rpx;
}
.pay-tip-rgt>text:nth-child(2) {
  color: #eb3949;
  font-size: 32rpx;
}
.pay-tip-rgt>text:nth-child(3) {
  color: #9c6c68;
  font-size: 24rpx;
}

.pay-btn {
  margin-top: 25rpx;
  background-color: #fe9901;
  width: 688rpx;
  height: 88rpx;
  border: #d67d17 solid 1rpx;
  font-size: 36rpx;
  color: white;
  text-align: center;
  line-height: 88rpx;
  border-radius: 10rpx;
}