/* pages/getSeat/getseat.wxss */
.header {
}
.info {
  margin: 0 33rpx 0 30rpx;
  padding: 28rpx 0 25rpx 0;
  border-bottom: #ddd 1rpx solid;
}
.info>text:first-child {
  display: block;
  font-size: 34rpx;
  font-weight: bold;
}
.info>text:not(:first-child) {
  font-size: 26rpx;
  color: #9b9b9b;
  margin-right: 14rpx;
}

.seat-icon-box {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
}
.seat-icon-box>view:not(:last-child) {
  margin-right: 40rpx;
}
.seat-icon-box>view text {
  margin-left: 10rpx;
}

.move-box {
  background:#f0f0f0;
  border-top: 1rpx #c0c0c0 solid;
  border-bottom: 1rpx #c0c0c0 solid;
  overflow: hidden;
}
.sch-name {
  width: 325rpx;
  height: 35rpx;
  background-color: #dcdcdc;
  margin: 0 auto;
}
.seat-box {
  width: 750rpx;
  height: 700rpx;
  position: absolute;
  top: calc(50% - 325rpx);
  left: calc(50% - 300rpx);
}

.footer-content {
  padding: 15rpx 0;
  margin: 0 30rpx;
  border-bottom: 2rpx #e6e6e6 solid;
}
.footer-content>text:first-child {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
}
.people {
  display: inline-block;
  width: 135rpx;
  height: 56rpx;
  border: 2rpx solid #ddd;
  text-align: center;
  line-height: 56rpx;
  margin-right: 22rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
}
.people-b {
  display: inline-block;
  width: 135rpx;
  height: 56rpx;
  border: 2rpx solid #ddd;
  text-align: center;
  line-height: 56rpx;
  margin-right: 22rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
}
.footer-buy {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 30rpx;
}
.footer-buy>text {
  font-size: 30rpx;
  color: #999;
}
.unselect {
  font-size: 30rpx;
  background-color: #ffd699;
  width: 296rpx;
  height: 76rpx;
  border: 2rpx solid #ebca99;
  line-height: 76rpx;
  color: white;
  text-align: center;
  border-radius: 5rpx; 
}
.select {
  font-size: 30rpx;
  background-color: orange;
  width: 296rpx;
  height: 76rpx;
  border: 2rpx solid #ebca99;
  line-height: 76rpx;
  color: white;
  text-align: center;
  border-radius: 5rpx; 
}
.seat-item-row {
  display: flex;
  justify-content: space-around;
  margin-bottom: 17rpx;
}
.seat-item {
  width: 36rpx;
  height: 36rpx;
}
