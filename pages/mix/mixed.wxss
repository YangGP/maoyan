/* pages/mix/mixed.wxss */
page {
  background-color: #f5f5f5;
}
.cinemaName {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}
.cinemaName-left {
  width: 555rpx;
}
.cinemaName-left>text {
  display: block;
}
.cinemaName-left>text:nth-child(1) {
  font-size: 34rpx;
}
.cinemaName-left>text:nth-child(2) {
  margin-top: 17rpx;
  font-size: 24rpx;
  color: #989898;
}
.cinemaName-locate {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  width: 50rpx;
}
.cinemaName-locate>text {
  display: block;
  font-size: 22rpx;
  color: #999;
}

.scroll-box {
  position: relative;
  height: 292rpx;
  width: 100%;
  overflow: hidden;
}
.scroll-movie {
  height: 100%;
  padding-top: 37rpx; 
  white-space: nowrap;
  position: relative;
  transition: all linear .5s;
}
.scroll-view-big {
  transition: all linear .5s;
  transform: scale(1.125, 1.125);
}
.scroll-item {
  width: 162rpx;
  height: 225rpx;
  margin-right: 37rpx;
}
.scroll-item-big {
  flex-basis: 162rpx;
  width: 162rpx;
  height: 225rpx;
  margin-right: 37rpx;
  transition: all linear .5s;
   transform: scale(1.125, 1.125); 
  border: 2rpx solid white;
}
.filterBack {
  position: absolute;
  width: 100%;
  height: 100%;
  filter: blur(10px);
  z-index: -1;
  transition: all linear .5s;
}
.white-cart {
  position: absolute;
  bottom: 0;
  left: calc(50% - 7rpx);
  width: 0;
  height: 0;
  border-bottom: 14rpx white solid;
  border-left: 14rpx transparent solid;
  border-right: 14rpx transparent solid;
}
.movie-info {
  margin-bottom: 20rpx;
  text-align: center;
  border-bottom: 1rpx #dcdcdc solid;
  padding: 20rpx;
  background-color: white;
}
.movie-info>text:nth-child(1) {
  font-size: 30rpx;
  font-weight: bold;
}
.movie-info>text:nth-child(2) {
  font-size: 24rpx;
  color: #ffb400;
  margin-left: 15rpx;
}
.movie-info>text:last-child {
  margin-top: 10rpx;
  display: block;
  font-size: 24rpx;
  color: #999;
}

.sch-time {
  height: 89rpx;
  border: 1rpx solid #dcdcdc;
  display: flex;
  align-items: center;
  background-color: white;
}
.sch-time>view {
  height: calc(100% - 2rpx);
  width: 220rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.sch-time>view:first-child {
  border-bottom: 2rpx solid #ef4238;
  color: #ef4238;
}
.sch-box {
  border-bottom: 1rpx #dcdcdc solid;
  background-color: white;
  padding-left: 30rpx;
}
.sch-data view>text {
  display: block;
}
.sch-data view>text:last-child {
  font-size: 22rpx;
  color: #999;
}
.sch-data {
  height: 145rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 24rpx;
}
.sch-data:not(:last-child) {
  border-bottom: 2rpx solid #999;
}
.sch-data1>text:first-child {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 18rpx;
}
.sch-data2>text:first-child {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 18rpx;
}
.sch-data3>text:first-child {
  font-size: 28rpx;
  color: #ef4238;
  margin-bottom: 18rpx;
}
.sch-data4>navigator {
  font-size: 24rpx;
  color: #fffcfc;
  background-color: #ef4238;
  width: 95rpx;
  height: 55rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 55rpx;
}

.eat {
  padding-left: 20rpx;
  margin-top: 20rpx;
  border-top: 1rpx #dcdcdc solid;
  border-bottom: 1rpx #dcdcdc solid;
  background-color: white;
}
.eat>text {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 26rpx;
  color: #666;
}
.eat-content {
  display: flex;
  padding: 29rpx 20rpx 29rpx 0;
  border-top: 1rpx solid #d8d8d8;
}
.eat-content>image {
  margin-right: 20rpx;
}
.eat-right>text {
  display: block;
}
.eat-right>text:nth-child(1) {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
}
.eat-right>text:nth-child(2) {
  font-size: 22rpx;
  color: #c2c2c2;
  margin-bottom: 28rpx;
}
.eat-btm {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.eat-btm>text:nth-child(1) {
  font-size: 28rpx;
  color: #dd4038;
  margin-right: 10rpx;
}
.eat-btm>text:nth-child(2) {
  font-size: 24rpx;
  color: #999;
  flex-grow: 1;
}
.eat-btm>text:nth-child(3) {
  font-size: 24rpx;
  color: #999;
}
