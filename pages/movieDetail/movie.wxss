/* pages/movieDetail/movie.wxss */
page {
  background-color: #f5f5f5;
}
.header {
  position: relative;
  border-bottom: 1rpx solid #8f99a0;
}
.filterBack {
  position: absolute;
  width: 100%;
  height: 100%;
  filter: blur(10px);
  z-index: -1;
}
.pad {
  padding: 25rpx 30rpx;
}
.head-top {
  display: flex;
}
.head-top>image {
  width: 220rpx;
  height: 300rpx;
  border: 1rpx solid #8f99a0;
}
.mainCtx {
  margin-left: 30rpx;
}
.mainCtx>text {
  display: block;
  font-size: 24rpx;
  color: #a2a8ab;
  margin-bottom: 10rpx;
}
.mainCtx>text:nth-child(1) {
  font-size: 34rpx;
  color: white;
}
.mainCtx>text:nth-child(2) {
  font-size: 18rpx;
  color: white;
  margin-bottom: 25rpx;
}
.mainCtx .movie-favor {
  font-size: 32rpx;
  color: #ffc600;
  margin-bottom: 3rpx;
}
.mainCtx .movie-score {
  font-size: 32rpx;
  color: yellow;
  margin-bottom: 3rpx;
}
.movie-score>text {
  margin-left: 10rpx;
}

.btnBox {
  display: flex;
  justify-content: space-around;
  margin-bottom: 24rpx;
}
.btnBox>.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 335rpx;
  height: 60rpx;
  background-color: rgba(255,255,255,.5);
  color: #fdfdfd;
  font-size: 26rpx;
  margin-top: 30rpx;
  border: 1rpx solid #ddd;
  border-radius: 7rpx;
}
.btn>image {
  width: 30rpx;
  height: 30rpx;
}

.synopsis {
  position: relative;
  padding: 10rpx 30rpx;
  height: 150rpx;
  overflow: hidden;
  background-color: white;
  transition: all linear .5s;
}
.long {
  height: 350rpx;
}
.synopsis>text {
  font-size: 30rpx;
  line-height: 50rpx;
  text-overflow: clip;
  overflow: hidden;
}
.downicon {
  transition: all linear .5s;
}
.transform {
  transform: rotateX(180deg);
}
.down {
  text-align: center;
  width: 100%;
  background-color: white;
  border-bottom: 1rpx solid #d8d8d8;
}


.actorBox {
  margin-top: 20rpx;
  padding-left: 30rpx;
  padding-top: 30rpx;
  background-color: white;
  border-top: 1rpx solid #d8d8d8;
  border-bottom: 1rpx solid #d8d8d8;
}
.actorBox>text {
  font-size: 28rpx;
}
.actor {
  display: inline-block;
  width: 140rpx;
  margin-right: 15rpx;
}
.actor>text {
  display: block;
  font-size: 22rpx;
  padding: 0 5rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  text-align: center;
}
.actor>text:last-child {
  color: #afafaf;
}
.scroll-view {
  margin-top: 25rpx;
  display: flex;
  white-space: nowrap;
}

.picBox {
  margin-top: 20rpx;
  padding-left: 30rpx;
  padding-top: 30rpx;
  background-color: white;
  border-top: 1rpx solid #d8d8d8;
  border-bottom: 1rpx solid #d8d8d8;
}
.picBox>text {
  font-size: 28rpx;
}
.pic {
  display: inline-block;
  margin-right: 15rpx;
}
.user-comment {
  margin-top: 20rpx;
  background-color: white;
  border-top: 1rpx solid #d8d8d8;
  border-bottom: 1rpx solid #d8d8d8;
}
.pro-comment {
  margin-top: 20rpx;
  padding:0 10rpx 0 30rpx;
  background-color: white;
  border-top: 1rpx solid #d8d8d8;
  border-bottom: 1rpx solid #d8d8d8;
}
.comment-head {
  padding:20rpx 10rpx 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: #e5e5e5 solid 1rpx;
}
.comment-head>text {
  font-size: 26rpx;
}
.add-button {
  width: 115rpx;
  height: 50rpx;
  font-size: 20rpx;
  color: #ef4238;
  border: 1rpx solid #ef4238;
  text-align: center;
  line-height: 50rpx;
  border-radius: 25rpx;
}

.comment {
  padding:30rpx 10rpx 0 30rpx;
  display: flex;
  padding-top: 30rpx;
}
.commit-rgt {
  width: 625rpx;
  margin-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #c8c8c8;
}
.commit-rgt>text {
  display: block;
}
.commit-rgt>text:nth-child(1) {
  font-size: 24rpx;
  color: #333;
}
.commit-rgt>text:nth-child(2) {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #333;
}
.user-img {
  width:60rpx;
  height:60rpx;
  border: 1px solid transparent;
  border-radius: 30rpx;
}
.commit-btm {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 20rpx;
  color: #999;
}
.showall {
  font-size: 30rpx;
  color: red;
  height: 100rpx;
  border-top: #e5e5e5 solid 1rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}



.empty {
  height: 100rpx;
}
.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
}
.footer>navigator {
  width: 100%;
  height: 100%;
  background-color: #ef4238;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}