/* pages/score/score.wxss */
page {
  background-color: #f5f5f5;
  text-align: center;
}
.tips {
  font-size: 28rpx;
  color: #cdc388;
  margin-top: 160rpx;
  margin-bottom: 30rpx;
}
.stars>image:not(:last-child) {
  margin-right: 20rpx;
}
.comment {
  margin: 35rpx auto;
  width: 670rpx;
  font-size: 30rpx;
  background-color: white;
  text-align: left;
  border: 2rpx #d7d7d7 solid;
  border-radius: 10rpx; 
}
.comment>textarea {
  padding: 35rpx 25rpx;
}
.btn {
  margin: 20rpx auto;
  width: 675rpx;
  height: 90rpx;
  background-color: #fbbe63;
  font-size: 34rpx;
  line-height: 90rpx;
  color: white;
  border: 1rpx solid #dbaa72;
}