/* pages/search/search.wxss */
page {
  background-color: #f5f5f5;
}
.icon {
  position: absolute;
  top: 28rpx;
  left: 35rpx;
  z-index: 2;
}
.header {
  display: flex;
  height: 85rpx;
  align-items: center;
  padding: 0 20rpx;
  justify-content: space-between;
  border-bottom: 1rpx solid #e5e5e5;
}
.header>input {
  width: 570rpx;
  background-color: white;
  padding-left: 55rpx;
  border-radius: 10rpx;
}
.header>text {
  font-size: 30rpx;
  color: #dd403b;
}

.cinemaBox>view:first-child {
   height: 80rpx;
   font-size: 30rpx;
   color: #b1b1b1;
   padding-left: 33rpx;
   line-height: 80rpx;
   background-color: white;
   border-bottom: 1rpx solid #e4e4e4;
}
.cinemaContent {
  padding: 40rpx 25rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #dcdcdc;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: white;
}
.clftCtx>text {
  display: block;
}
.clftCtx>text:nth-child(1) {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 25rpx;
}
.clftCtx>text:nth-child(2) {
  font-size: 24rpx;
  color: #9b9b9b;
}
.far {
  font-size: 20rpx;
  color: #999;
}



.onshow {
  margin-top: 20rpx;
}
.onshow>view:first-child {
   height: 80rpx;
   font-size: 30rpx;
   color: #b1b1b1;
   padding-left: 33rpx;
   line-height: 80rpx;
   background-color: white;
   border-bottom: 1rpx solid #e4e4e4;
}
.movieContent {
  background-color: white;
  padding: 25rpx;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  align-items: center;
}
.lftCtx {
  width: 130rpx;
  height: 180rpx;
}
.midCtx {
  width: 425rpx;
  margin-left: 22rpx;
}
.midCtx>text {
  display: block;
  font-size: 24rpx;
}
.midCtx>text:nth-child(1) {
  margin-top: 17rpx;
  margin-bottom: 17rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.midCtx>text:nth-child(2) {
  margin-bottom: 20rpx;
  font-size: 22rpx;
  color: #686868;
}
.midCtx>text:nth-child(3) {
  margin-bottom: 20rpx;
  color: #676767;
}
.midCtx>text:nth-child(4) {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #676767;
  margin-bottom: 17rpx;
}
.midCtx>text:nth-child(5) {
  color: #a5a5a5;
}
.rhtCtx {
  text-align: right;
}
.rhtCtx {
  color: #ffc23d;
}


