/* pages/user/user.wxss */
page {
  height: 100%;
}
.userContent {
  background-color: #f5f5f5;
  height: 100%;
}
.big-block {
  border: 2rpx solid #dfdfdf;
  margin-top: 17rpx;
  padding-left: 30rpx;
  background-color: white;
}
.user-block {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  font-size: 30rpx;
  font-weight: bold;
}
.user-block>text:last-child {
  font-family: "宋体";
  color: #c8c8c8;
  margin-right: 30rpx;
}
.user-block:not(:last-child) {
  border-bottom: 1rpx solid #dcdcdc;
}
.footer {
  margin-top: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #bebebe;
}
.footer>text:first-child {
  border: 1rpx solid #bebebe;
  font-size: 16rpx;
  border-radius: 10rpx;
  width: 20rpx;
  height: 20rpx;
}
.footer>text:nth-child(2) {
  margin-right: 10rpx;
}
.footer>text:nth-child(4) {
  margin-left: 15rpx;
  color: #e0b46b;
  text-decoration: underline;
}